@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Readery - Login</title>
    <link rel="stylesheet" href="~/styles/login.css">
    <link rel="stylesheet" href="~/styles/global.css">

    
    <script src="~/js/scripts.js" defer></script>
</head>

<body>

    <main class="container-login">

        <aside class="painel-esquerdo">
            <img src="~/assets/ImgLogin 1.png" alt="">
        </aside>

        <section class="painel-direito">
            <div class="borda">
                <img src="~/assets/logo.png" alt="Logo Readery" class="logo-login">

                <form id="loginForm" asp-controller="Login" asp-action="Entrar" method="post">
                    <section class="forms">
                        <div class="email">
                            <label for="email">E-mail</label>
                            <input type="email" id="email" name="email" required>
                        </div>

                        <div class="senha">
                            <label for="senha">Senha</label>
                            <input type="password" id="senha" name="senha" required>
                        </div>
                    </section>

                    <a href="~/Redefinicao/Index" class="link-esqueci">Esqueci minha senha</a>

                    <p class="erro-login @(ViewBag.Erro != null ? "mostrar" : "")">
                        @ViewBag.Erro
                    </p>

                    <section class="botoes">
                        <button type="submit" id="botaoEntrar" class="botao-entrar">Entrar</button>
                        <a href="~/Cadastro/Index" class="botao-cadastro">Cadastre-se</a>
                    </section>
                </form>
            </div>
        </section>
    </main>

</body>

</html>