                    <p class="titulo-livro">A Divina Comédia</p>
                    <div class="notas">
                        <p class="nota">0/5</p>
                        <button class="estrela" id="1">☆</button>
                        <button class="estrela2" id="2">☆</button>
                        <button class="estrela3" id="3">☆</button>
                        <button class="estrela4" id="4">☆</button>
                        <button class="estrela5" id="5">☆</button>
                    </div>
                </div>
            </div>
