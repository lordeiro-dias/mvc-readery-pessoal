                            <p>0/5</p>
                        </div>

                        <div>
                            <h2 class="estado-leitura-modal">Estado de Leitura:</h2>
                            <select id="" class="select-modal">
                                <option value="quero-ler">Quero Ler</option>
                                <option value="quero-ler">Lendo</option>
                                <option value="quero-ler">Lido</option>
                            </select>
                        </div>
                    </div>
                </div>

            </dialog>
        </section>

        <section class="secao-livros">
            <div class="espaco-card">
                <div class="card-dentro">
                    <div class="lixeira">
                        <button class="remover">X</button>
                    </div>
                    <img src="~/assets/img/divinacomedia.png" alt="" class="img-card">
                    <div class="textos">
