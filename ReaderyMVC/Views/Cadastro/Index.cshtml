@model ReaderyMVC.Models.Usuario;

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-bt">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/styles/cadastro.css">
    <link rel="stylesheet" href="~/styles/global.css">
    <title>Readery - Cadastro</title>
</head>

<body>
    <main class="container-cadastro">
        <img src="~/assets/logoCadastro.svg" asp-controller ="Cadastro" asp-action="Voltar" class="logo">
        <!-- Lado esquerdo -->
        <div class="dados">
            <section class="lado-esquerdo">
                <div class="titulo-esquerdo">
                    <h1>Descubra a melhor maneira de gerenciar sua leitura.</h1>
                    <p class="descricao-esquerda">Com o Readery Ã© possivel monitorar, editar e gerenciar sua leitura em
                        tempo real e com apenas um clique</p>
                </div>

            </section>
            <!-- lado direito -->

            <section class="lado-direito">
                <div class="titulo-direito">
                    <h2 class="titulo">Crie uma nova conta</h2>
                    <p class="descricao-direita">Crie uma nova conta</p>
                </div>

                @** Campo para inserir no cadastro *@
                <form class="campo-dados" asp-controller="Cadastro" asp-action="Criar" method="post">
                    <label for="nome-usuario">Nome Usuario:</label>
                    <input type="text" name="nome" placeholder="  Seu nome">

                    <label for="email-usuario">E-mail:</label>
                    <input type="email" id="email" name="email" placeholder="  email@gmail.com">

                    <label for="senha">Senha:</label>
                    <input type="password" name="senha" placeholder="  senha">
                    <p class="requerimento-senha">A senha deve ter pelo menos 8 digitos.</p>

                    @if(ViewBag.Erro != null)
                    {
                        <p class="Falha">@ViewBag.Erro</p>
                    }

                    <button class="cadastro" type="submit">
                        <span>Cadastrar</span>
                    </button>
                    <div class="linha-separativa">
                        <span class="linha-decorativa"></span>
                        Ou
                        <span class="linha-decorativa"></span>
                    </div>
                    <button class="google" type="">
                        <img src="~/assets/google.png" alt="" class="imagem-google">
                        Entrar com o google
                    </button>
                </form>
            </section>
        </div>
    </main>
    <script src="~/scripts/cadastro.js" defer></script>
</body>

</html>